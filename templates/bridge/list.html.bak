{% extends "bridge/base.html" %}

{% block content %}
    <table class="table table-striped table-bordered table-hover">
    <thead>
        <th>Title</th>
        <th>Created</th>
        <th>Actions</th>
    </thead>
    <tbody>
    {% for post in posts %}
        <tr>
            <th><a href="{{ url_for('admin.edit', slug=post.slug) }}">{{ post.title }}</a></th>
            <td>{{ post.created_at.strftime('%Y-%m-%d') }}</td>
            <td><a href="{{ url_for('admin.edit', slug=post.slug )}}" class="btn btn-primary btn-xs">Edit</a></td>
        </tr>
    {% endfor %}
    </tbody>
  </table>
{% endblock %}
        
        
        
